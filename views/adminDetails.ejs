<html lang="en">
  <%- include ('head_Tag');%>
  <body>
    <div class="container">
      <div class="bubbles">
          <%- include ('bubbles');%>
      </div>
    </div>
    <div class="navbar">
      <div class="navbar_background"></div>
      <div class="content_navbar">
          <header id="layout-header">
              <div class="mini-logo">
                  <a href='/'>
                      PUZZLE GAME
                  </a>
              </div>
              <div class="auth-links">
                  <a href="" class="profile-name">Admin</a>
                  <a href="/admin/logout" class="neon-btn-nav">Sign Out</a>
                  <a href="/admin" class="neon-btn-nav">Back</a>
              </div>
          </header>
      </div>
  </div>
    <div class="levels-admin" style="z-index: 5">
      <div style="display: flex;justify-content: center;align-items: center;width: 100vw;flex-direction: column;height:100vh">
        <table style="width:70%;text-align: center;">
          <tr>
            <th>_id:</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active Logins</th>
          </tr>
          <tr>
            <td style="color: var(--clr-neon-gr);"><%= users._id%></td>
            <td style="color: var(--clr-neon-rd);"><%= users.first_name%> <%= users.last_name%></td>
            <td style="color: var(--clr-neon-gr);"><%= users.email%></td>
            <td style="color: var(--clr-neon-rd);"><%= users.tokens.length%></td>
          </tr>
        </table>
        <br>
        <table style="width:70%;text-align: center;">
          <tr>
            <th>Level</th>
            <th>Time</th>
            <th>Accuracy</th>
          </tr>
          <% for(let i=1;i<users.levelYN.length;i++) {%>
            <% if(users.levelYN[i]==true) { %>
              <tr style="color: var(--clr-neon-gr);">
                <td><%=i%></td>
                <td><%=gameDetails[i].time%></td>
                <td><%=gameDetails[i].accuracy%></td>
              </tr>
            <%}else{%>
              <tr style="color: var(--clr-neon-rd);">
                <td><%=i%></td>
                <td>NULL</td>
                <td>NULL</td>
              </tr>
            <% } %>
          <% } %>
        </table>
        <div  style="margin:40px">
          <a href="" class="neon-button-red" id="delete-user">Delete User</a>
        </div>
      </div>
      
      </div>
      <div id="delete-user-yes-no">
        <div id="delete-form">
          <div>Are You sure to delete this user '<%= users.first_name%> <%= users.last_name%>'?</div>
          <div style="width:30vw;display: flex;justify-content: space-around;"><a href="/admin/deleteUser/<%= users._id%>" id="delete-user-yes">Yes</a><a href="" id="delete-user-no">No</a></div>
        </div>
      </div>
    </div>
    <script src="/js/admin.js"></script>
    <script src="js/forgotPassword.js"></script>
  </body>
</html>
