            <% } %>
            <% if (locals.level[2]==false&& locals.level[5]==false){ %>
                <a href="#" class="neon-button-grey level-access-btn" id="level5">Level 3</a>
            <% } %>

            <% if (locals.level[3]&& locals.level[6]==false){ %>
                <a href="/level6/<%= user._id%>" class="neon-button-yellow level-access-btn" id="level6">Level 3</a>
            <% } %>
            <% if (locals.level[3]&& locals.level[6]){ %>
            <a href="/level6/<%= user._id%>" class="neon-button-red level-access-btn"  id="level6">Level 3</a>
            <% } %>
