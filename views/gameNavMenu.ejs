                <a href="#" class="neon-button-grey level-access-btn"  id="level4">Level 3</a>
            <% } %>

            <% if (locals.level[2]&& locals.level[5]==false){ %>
                <a href="/level5/<%= user._id%>" class="neon-button-yellow level-access-btn" id="level5">Level 3</a>
