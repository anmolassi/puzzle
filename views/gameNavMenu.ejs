<html lang="en">
    <%- include ('head_Tag');%>
<body>
    <%- include ('background');%>
    <div class="levels">
        <% if (locals.level[1]){ %>
        <a href="/level1/<%= user._id%>" class="neon-button-green level-access-btn" id="level1">Level 1</a>
        <% }else{ %>
            <a href="/level1/<%= user._id%>" class="neon-button-yellow level-access-btn" id="level1">Level 1</a>
        <% } %>



        <div class="next_levels">
            <% if (locals.level[1]&& locals.level[2]==false){ %>
                <a href="/level2/<%= user._id%>" class="neon-button-yellow level-access-btn" id="level2">Level 2</a>
